%html
  %head
    %link{ rel: 'stylesheet', href: '/normalize.css' }
    %link{ rel: 'stylesheet', href: '/grid_960/960.css' }
    %style
      :sass
        // summer culture
        $navy:     #183131
        $burgundy: #3a2313
        $orange:   #e08401
        $tan:      #e4cc8d
        $sage:     #9ca98c
        $link:     #547980

        $background: #f0f0d8
        // $background: lighten($tan, 25%)

        body
          font-family: 'Lato'
          font-size: 16px
          line-height: 24px
          color: $navy
          background: $background
          // background: url('/line-grid.png')
        a:link, a:hover, a:active
          color: $link
        a:visited
          color: #663d4f
        h1, h2, h3
          margin: 0
          padding: 0
          text-rendering: optimizeLegibility
        h1
          line-height: 60px
          font-weight: 800
          font-size: 48px
        h2
          font-weight: 300
          font-size: 36px
          line-height: 48px
        h3
          font-weight: 300
          font-size: 24px
          line-height: 48px
        p
          margin: 12px 0
        ul
          margin: 0
          padding: 0
          li
            margin: 0
            padding: 0
        #header
          padding-top: 18px
          padding-bottom: 18px
          border-bottom: 1px solid $sage
        .post
          // background: #eeeeee
          margin-top: 24px
          overflow: hidden

          .datestamp
            // background: #dddddd
            font-size: 14px
            line-height: 16px
            padding-top: 8px
            padding-bottom: 8px
            text-align: center
            color: $sage
            .month
              font-weight: 800
              text-transform: uppercase
            .year
              font-weight: 300
        .widget
          // background: #eeeeee
          margin-top: 24px
          overflow: hidden
          h2
            color: $orange
          p
            font-weight: 300
        ul.elsewhere li
          &:before
            content: 'â†’'
