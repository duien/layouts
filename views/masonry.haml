!!!
%html
  %head
    %link{ :rel => 'stylesheet', :type => 'text/css', :href => '/masonry.css' }
    %script{ :src => '/jquery-1.4.2.min.js', :type => 'text/javascript' }
    %script{ :src => '/jquery.masonry.js', :type => 'text/javascript' }
    :javascript
      $(document).ready(function(){
        $('#wrapper').masonry({columnWidth:240, itemSelector: '.box'});
      })
  %body
    #wrapper
      - 20.times do
        .box{ :class => "col#{rand(3) + 1}" }= Faker::Lorem.words(rand(20)+20).join(' ')
